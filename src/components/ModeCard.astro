---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  href: string;
  imageSrc: ImageMetadata | string;
  imageAlt: string;
  accent?: 'community' | 'hookups';
  dataAttrs?: Record<string, string>;
}

const { title, description, href, imageSrc, imageAlt, accent, dataAttrs = {} } = Astro.props;
---

<a
  href={href}
  class="group block p-8 rounded-2xl bg-theme-bg-card border border-theme-border shadow-sm hover:shadow-lg hover:border-theme-accent transition-all duration-300"
  {...dataAttrs}
>
  <div class="mb-4">
    <h2 class="text-2xl font-bold text-theme-text">{title}</h2>
    <p class="mt-2 text-theme-text-subtle">{description}</p>
  </div>
  <div class="relative h-48 w-full rounded-lg overflow-hidden">
    <Image
      src={imageSrc}
      alt={imageAlt}
      width={400}
      height={300}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
    <div class="absolute inset-0 bg-black/10 group-hover:bg-black/20 transition-colors duration-300"></div>
  </div>
</a>
