---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Limpopo Connect - Sign Up/Login">
    <div class="p-8 flex items-center justify-center">
        <div class="w-full max-w-md">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-2xl p-8">
                <h2 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-2">Create Your Account</h2>
                <p class="text-center text-gray-600 dark:text-gray-400 mb-8">Step 1 of 2</p>
                <form id="signup-form" class="space-y-6">
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email Address</label>
                        <input type="email" id="email" name="email" required class="mt-1 block w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-3 px-4 focus:outline-none focus:ring-community-accent focus:border-community-accent">
                    </div>
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
                        <input type="password" id="password" name="password" required class="mt-1 block w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-3 px-4 focus:outline-none focus:ring-community-accent focus:border-community-accent">
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="age" name="age" required class="h-4 w-4 text-community-accent border-gray-300 rounded focus:ring-community-accent">
                        <label for="age" class="ml-2 block text-sm text-gray-900 dark:text-gray-200">I confirm I am 18 years or older.</label>
                    </div>
                    <div>
                        <a href="/onboarding/" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-community-accent hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-community-accent transition">
                            Create Account & Continue
                        </a>
                    </div>
                </form>
                <p class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400">
                    Already have an account? <a href="#" class="font-medium text-community-accent hover:text-orange-500">Login</a>
                </p>
            </div>
        </div>
    </div>
</MainLayout>
