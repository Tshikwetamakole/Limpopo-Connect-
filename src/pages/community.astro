---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Limpopo Connect - Community Hub">
    <div class="p-8">
        <div class="container mx-auto">
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-3xl font-bold text-gray-800 dark:text-white">Community Hub</h1>
                <button class="px-6 py-2 bg-community-accent text-white font-semibold rounded-lg shadow-md hover:bg-orange-600 transition">Create Event</button>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300">
                    <img src="https://via.placeholder.com/400x250/FF9500/FFFFFF?text=Music+Festival" alt="Event Image" class="w-full h-48 object-cover" loading="lazy">
                    <div class="p-6">
                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">Sat, Oct 12, 6:00 PM</p>
                        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">Local Music Festival</h3>
                        <p class="text-gray-600 dark:text-gray-300 mb-4">City Park</p>
                        <a href="/event-detail/" class="inline-block px-4 py-2 bg-community-secondary text-white font-semibold rounded-lg shadow-md hover:bg-teal-600 transition">View Event</a>
                    </div>
                </article>
                <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300">
                    <img src="https://via.placeholder.com/400x250/00A0B0/FFFFFF?text=Art+Workshop" alt="Event Image" class="w-full h-48 object-cover" loading="lazy">
                    <div class="p-6">
                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">Wed, Oct 16, 7:00 PM</p>
                        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">Art Workshop</h3>
                        <p class="text-gray-600 dark:text-gray-300 mb-4">Community Center</p>
                        <a href="/event-detail/" class="inline-block px-4 py-2 bg-community-secondary text-white font-semibold rounded-lg shadow-md hover:bg-teal-600 transition">View Event</a>
                    </div>
                </article>
            </div>
        </div>
    </div>
</MainLayout>
