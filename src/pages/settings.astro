---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Limpopo Connect - Settings">
    <div class="p-8">
        <div class="container mx-auto max-w-4xl">
            <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-8">Settings</h1>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
                <form id="settings-form" class="space-y-8">
                    <div class="space-y-4">
                        <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Profile Information</h2>
                        <div>
                            <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Username</label>
                            <input type="text" id="username" name="username" value="JohnDoe" class="mt-1 block w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-community-accent focus:border-community-accent">
                        </div>
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                            <input type="email" id="email" name="email" value="johndoe@example.com" class="mt-1 block w-full bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-community-accent focus:border-community-accent">
                        </div>
                    </div>
                    <div class="space-y-4">
                        <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Privacy Controls</h2>
                        <div class="flex items-center justify-between">
                            <span class="text-gray-700 dark:text-gray-300">Blur my avatar in Hookups mode</span>
                            <label for="blur-avatar" class="flex items-center cursor-pointer">
                                <div class="relative">
                                    <input type="checkbox" id="blur-avatar" class="sr-only">
                                    <div class="block bg-gray-300 dark:bg-gray-600 w-14 h-8 rounded-full"></div>
                                    <div class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition"></div>
                                </div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-gray-700 dark:text-gray-300">Use a pseudonym in Hookups mode</span>
                            <label for="use-pseudonym" class="flex items-center cursor-pointer">
                                <div class="relative">
                                    <input type="checkbox" id="use-pseudonym" class="sr-only">
                                    <div class="block bg-gray-300 dark:bg-gray-600 w-14 h-8 rounded-full"></div>
                                    <div class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition"></div>
                                </div>
                            </label>
                        </div>
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="px-6 py-2 bg-community-accent text-white font-semibold rounded-lg shadow-md hover:bg-orange-600 transition">Save Settings</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</MainLayout>

<style>
    input:checked ~ .dot {
        transform: translateX(100%);
        background-color: #ff9500; /* community-accent */
    }
    .dark input:checked ~ .dot {
        background-color: #ff3b30; /* hookups-accent */
    }
</style>
