---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Limpopo Connect - Hookups">
    <div class="bg-hookups-bg p-8">
        <div class="container mx-auto">
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-white mb-4">Hookups Feed</h1>
                <div class="flex flex-wrap items-center gap-4">
                    <div class="relative"><input type="search" placeholder="Search..." class="bg-gray-700 text-white rounded-full py-2 px-4 pl-10 focus:outline-none focus:ring-2 focus:ring-hookups-accent"></div>
                    <span class="bg-gray-700 text-white text-sm font-semibold px-4 py-2 rounded-full cursor-pointer hover:bg-hookups-accent transition">Age: 25-35</span>
                    <span class="bg-gray-700 text-white text-sm font-semibold px-4 py-2 rounded-full cursor-pointer hover:bg-hookups-accent transition">Location: Downtown</span>
                    <span class="bg-gray-700 text-white text-sm font-semibold px-4 py-2 rounded-full cursor-pointer hover:bg-hookups-accent transition">Preference: M4F</span>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="group perspective-1000">
                    <div class="relative w-full h-80 rounded-lg shadow-lg transition-transform duration-700 transform-style-3d group-hover:rotate-y-180">
                        <div class="absolute w-full h-full backface-hidden rounded-lg overflow-hidden bg-gray-800 border border-hookups-accent/30 p-6 flex flex-col justify-between">
                            <div>
                                <div class="flex items-center gap-4 mb-4"><img src="https://via.placeholder.com/50/FF3B30/FFFFFF?text=A" alt="Avatar" class="w-12 h-12 rounded-full object-cover filter blur-sm"><span class="font-bold text-lg text-white">Anonymous</span></div>
                                <h3 class="text-xl font-bold text-white mb-2">Looking for fun tonight</h3>
                            </div>
                            <p class="text-gray-400">25, M4F, Downtown</p>
                        </div>
                        <div class="absolute w-full h-full backface-hidden rounded-lg overflow-hidden bg-gray-700 border border-hookups-accent/30 p-6 flex flex-col justify-between rotate-y-180">
                            <p class="text-gray-300">Discreet and respectful. Can host. Looking for someone to connect with...</p>
                            <a href="/post-detail/" class="self-end mt-4 px-4 py-2 bg-hookups-accent text-white font-bold rounded-lg shadow-lg hover:bg-red-700 transition">View Post</a>
                        </div>
                    </div>
                </div>
                <div class="group perspective-1000">
                     <div class="relative w-full h-80 rounded-lg shadow-lg transition-transform duration-700 transform-style-3d group-hover:rotate-y-180">
                        <div class="absolute w-full h-full backface-hidden rounded-lg overflow-hidden bg-gray-800 border border-hookups-accent/30 p-6 flex flex-col justify-between">
                            <div>
                                <div class="flex items-center gap-4 mb-4"><img src="https://via.placeholder.com/50/FF9500/FFFFFF?text=N" alt="Avatar" class="w-12 h-12 rounded-full object-cover"><span class="font-bold text-lg text-white">NewInTown</span></div>
                                <h3 class="text-xl font-bold text-white mb-2">New in town</h3>
                            </div>
                            <p class="text-gray-400">30, F4M, Midtown</p>
                        </div>
                        <div class="absolute w-full h-full backface-hidden rounded-lg overflow-hidden bg-gray-700 border border-hookups-accent/30 p-6 flex flex-col justify-between rotate-y-180">
                            <p class="text-gray-300">Just moved here and looking to meet new people for casual fun...</p>
                            <a href="/post-detail/" class="self-end mt-4 px-4 py-2 bg-hookups-accent text-white font-bold rounded-lg shadow-lg hover:bg-red-700 transition">View Post</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a href="/create-post/" class="fixed bottom-24 right-8 lg:bottom-8 lg:right-8 bg-hookups-accent text-white w-16 h-16 rounded-full flex items-center justify-center shadow-lg hover:bg-red-700 transition"><p class="text-3xl">+</p></a>
    </div>
</MainLayout>

<style>
  .perspective-1000 { perspective: 1000px; }
  .transform-style-3d { transform-style: preserve-3d; }
  .backface-hidden { backface-visibility: hidden; }
  .rotate-y-180 { transform: rotateY(180deg); }
</style>
