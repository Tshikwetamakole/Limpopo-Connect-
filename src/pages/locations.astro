---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Limpopo Connect - Locations">
    <div class="p-8">
        <div class="container mx-auto">
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-3xl font-bold text-gray-800 dark:text-white">Explore Locations</h1>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300">
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">Polokwane</h3>
                        <p class="text-gray-600 dark:text-gray-300 mb-4">The vibrant capital of Limpopo.</p>
                        <a href="/polokwane/" class="inline-block px-4 py-2 bg-community-secondary text-white font-semibold rounded-lg shadow-md hover:bg-teal-600 transition">Explore</a>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300">
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">Tzaneen</h3>
                        <p class="text-gray-600 dark:text-gray-300 mb-4">A tropical paradise in the Mopani district.</p>
                        <a href="/tzaneen/" class="inline-block px-4 py-2 bg-community-secondary text-white font-semibold rounded-lg shadow-md hover:bg-teal-600 transition">Explore</a>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300">
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">Mokopane</h3>
                        <p class="text-gray-600 dark:text-gray-300 mb-4">Rich in history and culture.</p>
                        <a href="/mokopane/" class="inline-block px-4 py-2 bg-community-secondary text-white font-semibold rounded-lg shadow-md hover:bg-teal-600 transition">Explore</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</MainLayout>
