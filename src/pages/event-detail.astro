---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Limpopo Connect - Event Detail">
    <div class="relative">
        <img src="https://via.placeholder.com/1200x400/FF9500/FFFFFF?text=Music+Festival" alt="Event Banner" class="w-full h-96 object-cover">
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
        <div class="absolute bottom-0 left-0 p-8">
            <h1 class="text-5xl font-bold text-white">Local Music Festival</h1>
            <p class="text-xl text-gray-300">Hosted by City Events</p>
        </div>
    </div>
    <div class="p-8 max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
                <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Event Details</h2>
                <div class="prose prose-lg max-w-none text-gray-600 dark:text-gray-300">
                    <p>Join us for a fantastic night of live music from local bands. Food trucks, art installations, and good vibes all around. All ages welcome!</p>
                    <p>This year's lineup features The Local Legends, The Up-and-Comers, and a surprise guest headliner. Get ready to dance the night away under the stars.</p>
                </div>
            </div>
        </div>
        <div class="lg:col-span-1">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 space-y-6">
                <div>
                    <h3 class="font-bold text-gray-800 dark:text-white">Date & Time</h3>
                    <p class="text-gray-600 dark:text-gray-300">Sat, Oct 12, 6:00 PM - 11:00 PM</p>
                </div>
                <div>
                    <h3 class="font-bold text-gray-800 dark:text-white">Location</h3>
                    <p class="text-gray-600 dark:text-gray-300">City Park, Main Stage</p>
                </div>
                <div>
                    <h3 class="font-bold text-gray-800 dark:text-white mb-2">Attendees (125)</h3>
                    <div class="flex -space-x-2 overflow-hidden">
                        <img class="inline-block h-10 w-10 rounded-full ring-2 ring-white dark:ring-gray-800" src="https://via.placeholder.com/40/FF9500/FFFFFF" alt="Attendee">
                        <img class="inline-block h-10 w-10 rounded-full ring-2 ring-white dark:ring-gray-800" src="https://via.placeholder.com/40/00A0B0/FFFFFF" alt="Attendee">
                        <img class="inline-block h-10 w-10 rounded-full ring-2 ring-white dark:ring-gray-800" src="https://via.placeholder.com/40/FF3B30/FFFFFF" alt="Attendee">
                        <div class="flex items-center justify-center h-10 w-10 rounded-full ring-2 ring-white dark:ring-gray-800 bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-300 font-bold">+122</div>
                    </div>
                </div>
                <button class="w-full py-3 px-6 bg-community-accent text-white font-bold rounded-lg shadow-md hover:bg-orange-600 transition">RSVP Now</button>
            </div>
        </div>
    </div>
</MainLayout>
