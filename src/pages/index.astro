---
import MainLayout from '../layouts/MainLayout.astro';
import ModeCard from '../components/ModeCard.astro';
---
<MainLayout title="Limpopo Connect">
    <div class="relative min-h-full flex items-center justify-center p-4 sm:p-8 bg-gradient-to-br from-purple-600 via-pink-500 to-red-500">
        <div class="absolute bg-black opacity-50 inset-0"></div>
        <div class="relative z-10 text-center text-white w-full">
            <h1 class="text-5xl md:text-7xl font-bold mb-4 tracking-tight">Connect Your Way</h1>
            <p class="text-xl md:text-2xl mb-10 font-light">One platform, two worlds. Find your connection.</p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
                <ModeCard
                    title="Hookups"
                    description="Discreet. Anonymous. Direct."
                    imageUrl="/images/hookups-card.png"
                    imageAlt="A stylized, dark image representing privacy and connection"
                    link="/hookups/"
                    accentColor="hookups"
                />
                <ModeCard
                    title="Community"
                    description="Events. Groups. Culture."
                    imageUrl="/images/community-card.png"
                    imageAlt="A vibrant image representing community events and gatherings"
                    link="/community/"
                    accentColor="community"
                />
            </div>
        </div>
    </div>
</MainLayout>
