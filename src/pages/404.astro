---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="404: Page Not Found">
  <div class="flex flex-col items-center justify-center text-center py-24 px-6 min-h-[60vh]">
    <h1 class="text-6xl font-bold text-theme-accent">404</h1>
    <h2 class="text-3xl font-bold mt-4 text-theme-text">Page Not Found</h2>
    <p class="mt-4 max-w-md text-lg text-theme-text/80">
      Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
    </p>
    <a href="/" class="mt-8 inline-block px-8 py-3 bg-theme-accent text-white font-bold rounded-full shadow-lg hover:scale-105 transition-transform">
      Go Back Home
    </a>
  </div>
</MainLayout>
