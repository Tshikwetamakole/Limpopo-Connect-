---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Limpopo Connect - Profile">
    <div class="p-8">
        <div class="container mx-auto">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 mb-8 flex flex-col md:flex-row items-center gap-8">
                <img src="https://via.placeholder.com/150/00A0B0/FFFFFF?text=JD" alt="Profile Avatar" class="w-36 h-36 rounded-full border-4 border-community-accent dark:border-hookups-accent">
                <div class="text-center md:text-left">
                    <h1 class="text-4xl font-bold text-gray-800 dark:text-white">JohnDoe</h1>
                    <p class="text-gray-600 dark:text-gray-400">Joined September 2025</p>
                </div>
                <div class="ml-auto flex gap-4">
                    <a href="/settings/" class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-white font-semibold rounded-lg shadow-md hover:bg-gray-300 dark:hover:bg-gray-600 transition">Settings</a>
                </div>
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2 space-y-8">
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
                        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">My Badges</h2>
                        <div class="flex flex-wrap gap-4">
                            <span class="bg-yellow-400 text-yellow-800 text-sm font-semibold px-4 py-2 rounded-full">Pioneer</span>
                            <span class="bg-green-400 text-green-800 text-sm font-semibold px-4 py-2 rounded-full">Community Starter</span>
                            <span class="bg-blue-400 text-blue-800 text-sm font-semibold px-4 py-2 rounded-full">First Post</span>
                        </div>
                    </div>
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
                        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">My Hookups Posts</h2>
                        <p class="text-gray-600 dark:text-gray-400">No posts yet.</p>
                    </div>
                </div>
                <div class="lg:col-span-1">
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
                        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Activity Heatmap</h2>
                        <div class="grid grid-cols-7 gap-2">
                            <div class="w-8 h-8 bg-gray-200 dark:bg-gray-700 rounded"></div>
                            <div class="w-8 h-8 bg-green-200 dark:bg-green-800 rounded"></div>
                            <div class="w-8 h-8 bg-green-400 dark:bg-green-600 rounded"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</MainLayout>
